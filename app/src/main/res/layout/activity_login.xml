<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/main_logo"/>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="12dp"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:src="@drawable/edittext_underbar"/>
            <com.example.lee.playinseoul.model.LightTextView
                android:layout_width="73dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:text="아이디"/>
            <EditText
                android:layout_width="121dp"
                android:layout_height="19dp"
                android:layout_margin="3dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:textColor="#ffffff"
                android:inputType="textEmailAddress"
                android:id="@+id/login_userid" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="12dp"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:src="@drawable/edittext_underbar"/>
            <com.example.lee.playinseoul.model.LightTextView
                android:layout_width="73dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:text="비밀번호"/>
            <EditText
                android:layout_width="121dp"
                android:layout_height="19dp"
                android:layout_margin="3dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:textColor="#ffffff"
                android:inputType="textPassword"
                android:id="@+id/login_password" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:src="@drawable/icon_checkbox"
                android:id="@+id/login_auto" />

            <com.example.lee.playinseoul.model.LightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="자동 로그인"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <com.example.lee.playinseoul.model.MediumTextView
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:text="로그인"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/selector_button_white"
            android:id="@+id/login_login" />

        <com.example.lee.playinseoul.model.MediumTextView
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="회원 가입"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/selector_button_white"
            android:id="@+id/login_join" />
    </LinearLayout>
</RelativeLayout>
